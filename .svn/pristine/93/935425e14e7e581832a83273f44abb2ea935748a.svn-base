<%= link_to b_add + _('Add_new_cron_action'), :action => 'new' %>
<br/><br/>
<table width="100%" class="maintable">
  <tr>
    <th align="left"><%= _('Name') %></th>
    <th align="left"><%= _('Action') %></th>
    <th align="left"><%= _('User') %></th>
    <th></th>
    <th></th>
  </tr>

  <% @cron_settings.each_with_index { |cs, i| %>
      <tr class="row<%= (i % 2 + 1).to_s %>">
        <td id="name_<%= cs.id %>"><%= h cs.name %></td>
        <td id="action_<%= cs.id %>"><%= _(cs.action) %></td>
        <td id="user_<%= cs.id %>"><%= cs.target ? link_nice_user(cs.target) : show_user_selection(cs.target_id) if cs.target_class == 'User' %></td>
        <td align="center" id="edit_<%= cs.id %>"><%= link_to b_edit, {:action => 'edit', :id => cs.id}, :id => "cs_edit_#{cs.id}" %></td>
        <td align="center" id="destroy_<%= cs.id %>"><%= link_to b_delete, {:action => 'destroy', :id => cs.id}, :id => "cs_destroy_#{cs.id}", :confirm => _('Are_you_sure'), :method => :post %></td>
      </tr>
  <% } %>
</table>
