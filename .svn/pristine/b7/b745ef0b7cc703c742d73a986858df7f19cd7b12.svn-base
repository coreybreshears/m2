<%= form_tag(:action => 'create') do %>
  <%= render 'form', user: @user, username_length: @username_length, password_length: @password_length, count_rs: @count_rs, count_rspro: @count_rspro,
                   create_own_providers: @create_own_providers,
                   responsible_accountants: @responsible_accountants, countries: @countries,
                   selected_user_users_number: @selected_user_users_number, default_user_form: false,
                   warning_email: @warning_email, default_country_id: @default_country_id,
                   disallow_email_editing: @disallow_email_editing,
                   warning_balance_email_send_log: @warning_balance_email_send_log,
                   blacklists_on: @blacklists_on, number_pools: @number_pools, new_user: true %>
  <%= submit_tag _('Create'), :disable_with => _('Processing..'), :id => 'commit' %>
<% end %>

