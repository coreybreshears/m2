<% content_for :additional_buttons do %>
  <span>
    <%= button_tag(
                _('Add_New_Rate_Import_Rules'), class: 'search-form-button',
                onclick: "location.href = '#{Web_Dir}/tariff_rate_import_rules/new'"
        )
    %>
  </span>
<% end %>

<div class="content-box">
  <div class="table-box">
    <h2><%= _('Rate_Import_Rules') %></h2>
    <div class="table-holder">
      <% if @tariff_rate_import_rules.present? %>
          <table class="table-with-edit-and-delete">
            <tr>
              <th class="tariff_rate_import_rules-name"><%= _('Name') %></th>
              <th class="tariff_rate_import_rules-comment"><%= _('Comment') %></th>
              <th></th>
              <th></th>
            </tr>
            <% @tariff_rate_import_rules.each do |tariff_rate_import_rule| %>
                <tr <%= tariff_rate_import_rules_tooltip_for_list(tariff_rate_import_rule) %>>
                  <td id="name_<%= tariff_rate_import_rule.id %>" class="tariff_rate_import_rules-name_list">
                    <%= tariff_rate_import_rule.name %>
                  </td>
                  <td id="comment_<%= tariff_rate_import_rule.id %>" class="tariff_rate_import_rules-comment_list">
                    <%= tariff_rate_import_rule.comment %>
                  </td>
                  <td id="edit_<%= tariff_rate_import_rule.id %>">
                    <%= link_to 'EDIT', {action: :edit, id: tariff_rate_import_rule.id}, id: "edit_link_#{tariff_rate_import_rule.id}" %>
                  </td>
                  <td id="destroy_<%= tariff_rate_import_rule.id %>">
                    <%= button_to 'DELETE', {action: :destroy, id: tariff_rate_import_rule.id}, onclick: "return confirm('Are you sure?')", class: 'delete_button', method: :post, id: "delete_link_#{tariff_rate_import_rule.id}" %>
                  </td>
                </tr>
            <% end %>
          </table>
      <% else %>
          <%= _('No_Rate_Import_Rules') %>
      <% end %>
    </div>
  </div>
</div>