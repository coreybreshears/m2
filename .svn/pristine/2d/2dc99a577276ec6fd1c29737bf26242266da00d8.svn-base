<div class="content-box">
  <div class="table-box">
    <h2><%= _('New_Quality_Routing') %></h2>
    <%= form_for @qr, url: { action: 'create', id: @qr.id }, html: { class: 'details-form' } do |f| %>
        <%= render 'form',  f: f %>
        <div class="buttons-row">
          <%= f.submit _('Cancel'), name: 'cancel', type: 'reset', onclick: "location.href = '#{Web_Dir}/quality_routings/list'" %>
          <%= f.submit _('Create'), disable_with: 'Processing...' %>
        </div>
    <% end %>
  </div>
</div>
