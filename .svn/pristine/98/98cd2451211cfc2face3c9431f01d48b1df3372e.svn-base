            <span class="tariff_templates-select_inbetween">:</span>
            <span <%= tooltip('Column', '') %>><%= f.select(:timezone_column, options_for_select(tariff_template_columns_selection(true), rate_notification_template.timezone_column), {}, {class: 'tariff_templates-select_column'}) %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
