<div class="row">
  <div class="col col-width_43pc col-border-right">
    <div class="row">
      <div class="col col-width-max">
        <div class="input-row">
          <div class="label-col one-third">
            <label><%= _('Name') %></label>
          </div>
          <div class="input-col two-thirds">
            <% if rate_notification_template.is_default? %>
                <div class="not-input-col-just-text">Default</div>
            <% else %>
                <%= f.text_field(:name, class: 'input', maxlength: 100, autocomplete: 'disabled') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col col-width-max <%= 'no-padding-bottom' unless %w[new create].include?(params[:action]) %>">
        <div class="input-row">
          <div class="label-col one-third">
            <label><%= _('XLSX_Template') %></label>
          </div>
          <div class="input-col two-thirds file-input-no-margin">
            <%= file_field_tag 'xlsx_template_file', disabled: rate_notification_template.is_default? %>
          </div>
        </div>
      </div>
    </div>
    <% unless %w[new create].include?(params[:action]) %>
        <div class="row">
          <div class="col col-width-max">
            <div class="input-row">
              <div class="label-col one-third"></div>
              <div class="input-col two-thirds">
                <div class="not-input-col-just-text text-link">
                  <%= link_to(_('Download_current_XLSX_Template'), {controller: :tariff_rate_notification_templates, action: :download_current_xlsx_template, id: rate_notification_template.id}, id: "download_current_xlsx_template_#{rate_notification_template.id}") %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>

    <div class="row">
      <div class="col col-width-max">
        <div class="input-row">
          <div class="label-col one-third">
            <label><%= _('Headers_Row') %></label>
          </div>
          <div class="input-col two-thirds">
            <%= f.text_field(:header_rows, class: 'tariff_templates-column1', maxlength: 5) %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col col-width-max no-padding-bottom">
        <div class="input-row">
          <div class="label-col one-third">
            <label><%= _('Client') %></label>
          </div>
          <div class="input-col two-thirds">
            <span <%= tooltip('Row', '') %>><%= f.text_field(:client_row, class: 'tariff_templates-column1', maxlength: 5) %></span>
            <span class="tariff_templates-select_inbetween">:</span>
            <span <%= tooltip('Column', '') %>><%= f.select(:client_column, options_for_select(tariff_template_columns_selection(true), rate_notification_template.client_column), {}, {class: 'tariff_templates-select_column'}) %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col col-width-max no-padding-bottom">
        <div class="input-row">
          <div class="label-col one-third">
            <label><%= _('Currency') %></label>
          </div>
          <div class="input-col two-thirds">
            <span <%= tooltip('Row', '') %>><%= f.text_field(:currency_row, class: 'tariff_templates-column1', maxlength: 5) %></span>
            <span class="tariff_templates-select_inbetween">:</span>
            <span <%= tooltip('Column', '') %>><%= f.select(:currency_column, options_for_select(tariff_template_columns_selection(true), rate_notification_template.currency_column), {}, {class: 'tariff_templates-select_column'}) %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
